#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

# include .files when moving things around
shopt -s dotglob

# move everything pushed into tmp dir so we can prep Factor
mkdir -p $CACHE_DIR/tmp_work
mv * $CACHE_DIR/tmp_work

# check if we already downloaded factor; otherwise download it
if [ -d $CACHE_DIR/factor ]; then
  cp -r $CACHE_DIR/factor $BUILD_DIR
else
  curl --silent --fail http://rbrainard-public.s3.amazonaws.com/heroku-buildpack-factor/factor.tgz | tar xz
  cp -r factor $CACHE_DIR
fi

# move the pushed code under work dir
rm -rf factor/work
mv $CACHE_DIR/tmp_work factor/work
